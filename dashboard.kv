#:kivy 1.9.1

<Dashboard>:
    GridLayout:
        cols: 3
        width: root.width
        height: root.height
##########################################
        Label:
            font_size: 20
            text: "Speed"
        Label:
            font_size: 20
            text: "RPM"
        Label:
            font_size: 20
            text: "Fuel Rate"
##########################################
        Label:
            font_size: 55
            size_hint_x: None
            width: root.width / 3
            text: str(root.spd)
        Label:
            font_size: 55
            size_hint_x: None
            width: root.width / 3
            text: str(root.rpm)
        Label:
            font_size: 55
            size_hint_x: None
            width: root.width / 3
            text: str(root.fuel_rate)
##########################################
        Label:
            font_size: 20
            text: "Fuel Level"
        Label:
            font_size: 20
            text: "Coolant Tmp"
        Label:
            font_size: 20
            text: "Intake Tmp"
##########################################
        Label:
            font_size: 55
            size_hint_x: None
            width: root.width / 3
            text: str(root.fuel_level)
        Label:
            font_size: 55
            size_hint_x: None
            width: root.width / 3
            text: str(root.coolant_tmp)
        Label:
            font_size: 55
            size_hint_x: None
            width: root.width / 3
            text: str(root.intake_tmp)
